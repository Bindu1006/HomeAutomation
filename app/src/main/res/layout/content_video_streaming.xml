<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_url_to_stream"
    tools:context="com.example.shruti.homeautomation.AddUrlToStream">

    <Button android:text="Start Video"
        android:id="@+id/button_video"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:onClick="startVideo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></Button>

    <Button android:text="Set Number"
        android:id="@+id/button_setNum"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:onClick="setNumber"
        android:layout_above="@+id/id_videoStatus"
        android:layout_toEndOf="@+id/id_videoStatus"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Video Status: "
        android:id="@+id/id_videoStatus"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="59dp"
        android:layout_below="@+id/button_video"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/id_videoStatusSwitch"
        android:textOn="@string/switchOn"
        android:textOff="@string/switchOff"
        android:showText="true"
        android:thumbTextPadding="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/id_videoStatus"
        android:layout_marginTop="140dp"
        android:layout_marginStart="34dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/id_videoURL"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true" />

    <com.example.shruti.homeautomation.PlayerFiles.PlayerView
        android:id="@+id/videoView1"
        android:layout_width="fill_parent"
        android:layout_marginTop="300dp"
        android:layout_height="200dp">

    </com.example.shruti.homeautomation.PlayerFiles.PlayerView>

</RelativeLayout>

