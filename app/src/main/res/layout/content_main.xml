<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">




    <ImageView
        android:id="@+id/ledConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/led"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureLed"
        android:layout_alignParentStart="true" />

    <TextView android:text="Configure LED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/textView1"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/wemoConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wemoswitch"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureWemo"
        android:layout_below="@+id/ledConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="Configure WeMo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/textView2"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <ImageView
        android:id="@+id/videoConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureVideo"
        android:layout_below="@+id/wemoConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/textView3"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp" />

    <ImageView
        android:id="@+id/keysConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/keys"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureKeys"
        android:layout_below="@+id/videoConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="Configure Keys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/textView4"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp" />

    <ImageView
        android:id="@+id/id_getStarted"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/getstarted"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="getStarted"
        android:layout_below="@+id/keysConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/getStartedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/textView5"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp" />




