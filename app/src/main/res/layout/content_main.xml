<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fcfdfd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ledConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/led"
        android:paddingRight="10dp"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:onClick="configureLed"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <TextView android:text="LED"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/id_Led"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:clickable="true"
        android:onClick="configureLed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <ImageView
        android:id="@+id/wemoConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wemoswitch"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureWemo"
        android:layout_below="@+id/ledConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="SmartSwitch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/id_smartSwitch"
        android:clickable="true"
        android:onClick="configureWemo"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp" />

    <ImageView
        android:id="@+id/videoConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera"
        android:paddingRight="10dp"
        android:clickable="true"
        android:onClick="configureVideo"
        android:layout_below="@+id/wemoConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="Surveillance"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/id_video"
        android:clickable="true"
        android:onClick="configureVideo"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp" />

    <ImageView
        android:id="@+id/keysConfigurePage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/key"
        android:paddingRight="10dp"
        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:onClick="configureKeys"
        android:layout_below="@+id/videoConfigurePage"
        android:layout_alignParentStart="true" />

    <TextView android:text="Configure Keys"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/id_keys"
        android:clickable="true"
        android:onClick="configureKeys"
        android:layout_toRightOf="@id/ledConfigurePage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp" />

